<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".WQblockBluetooth" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp" >

        <EditText
            android:id="@+id/batch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Batch Name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textSize="@dimen/textSubHeading" >
			
            
        </EditText>

        <EditText
            android:id="@+id/batch_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/SpacerBig"
            android:layout_marginTop="@dimen/SpacerBig"
            android:hint="Enter Note"
            android:imeOptions="actionDone"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:textSize="@dimen/textSubHeading" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="10dp" >

            <Spinner
                android:id="@+id/settings_chemist_spinner"
                android:layout_width="200dp"
                android:layout_height="35dp" />
            <requestFocus />
        </LinearLayout>

        <TextView
            style="@style/styleRunningText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="Select Chemist Name" />

        <TextView
            android:id="@+id/messagePresCal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:maxWidth="250dp"
            android:text="Selected Vessel Positions in use"
            android:textColor="@color/Red"
            android:textSize="20sp" />
    
        </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:orientation="horizontal"
        android:padding="20dp" >

        <ImageView
            android:id="@+id/ivCarousel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/carousel12" />
		
        <CheckBox
            android:id="@+id/cbVessel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivCarousel"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dp"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@color/Red"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cbVessel7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cbVessel1"
            android:layout_alignRight="@+id/ivCarousel"
            android:layout_marginRight="30dp"
            android:clickable="false"
            android:focusable="false" />

        <CheckBox
            android:id="@+id/cbVessel10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivCarousel"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:clickable="false"
            android:focusable="false" />

        

        

        

        <CheckBox
            android:id="@+id/cbVessel4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cbVessel10"
            android:layout_alignTop="@+id/ivCarousel"
            android:layout_marginTop="31dp"
            android:clickable="false"
            android:focusable="false" />

     
       
        <CheckBox
            android:id="@+id/cbVessel9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="230dp"
            android:clickable="false"
            android:focusable="false" />
        <CheckBox
            android:id="@+id/cbVessel5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cbVessel9"
            android:layout_marginTop="45dp"
            android:clickable="false"
            android:focusable="false" 
            android:textColor="@color/Blue"
            android:textSize="25sp"/>

        <CheckBox
            android:id="@+id/cbVessel11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="95dp"
            android:clickable="false"
            android:focusable="false" />
        <CheckBox
            android:id="@+id/cbVessel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cbVessel11"
            android:layout_marginTop="45dp"
            android:clickable="false"
            android:focusable="false" 
            android:textColor="@color/Blue"
            android:textSize="25sp"/>

        <CheckBox
            android:id="@+id/cbVessel12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="45dp"
            android:clickable="false"
            android:focusable="false" />
        <CheckBox
            android:id="@+id/cbVessel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cbVessel12"
            android:layout_marginTop="95dp"
            android:clickable="false"
            android:focusable="false" 
            android:textColor="@color/Blue"
            android:textSize="25sp"/>

        <CheckBox
            android:id="@+id/cbVessel8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="280dp"
            android:clickable="false"
            android:focusable="false" />
        <CheckBox
            android:id="@+id/cbVessel6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cbVessel8"
            android:layout_marginTop="95dp"
            android:clickable="false"
            android:focusable="false" 
            android:textColor="@color/Blue"
            android:textSize="25sp"/>

    </RelativeLayout>

</LinearLayout>